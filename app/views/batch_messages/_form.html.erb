<%= simple_form_for(@batch_message) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :message_content, label_html: { class: 'col-md-2 col-form-label' }, input_html: { class: 'col-md-3 form-control', rows: '5' } %> 

    <%= f.association :short_codes, label_method: :code, collection: ShortCode.all, label_html: { class: 'col-md-2 col-form-label' }, input_html: { class: 'form-control col-md-2', multiple: true }, include_blank: false %>

    <%= f.input :start_time, label_html: { class: 'col-md-2 col-form-label' }, input_html: { class: 'form-control col-xs-2', type: 'datetime-local' } %>

    <%= f.input :end_time, label_html: { class: 'col-md-2 col-form-label' }, input_html: { class: 'form-control col-xs-2', type: 'datetime-local' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-info btn-lg' %>
  </div>
<% end %>
